@model MyWebTest.ViewModels.EditQuestionViewModel
@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-route="question" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Title">@Localizer["title"]</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CorrectAnswer">@Localizer["correct"]</label>
        <input asp-for="CorrectAnswer" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AnswerOptions">@Localizer["options"]</label>
        <input asp-for="AnswerOptions" class="form-control" />
    </div>
    <div class="form-group" hidden="hidden">
        <label asp-for="TestId">@Model.TestId</label>
        <input asp-for="TestId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["edit"]</button>
</form>

